<h1>Portfolio Details: <%= @portfolio.portfolio_name %></h1>

<% if @portfolio.description.present? %>
  <p><%= @portfolio.description %></p>
<% end %>

<%= display_portfolio_details(@portfolio) %>

<div class="action-buttons">
  <%= link_to "All Portfolios", portfolios_path, class: "btn" %>
  <%= link_to "Edit", edit_portfolio_path(@portfolio), class: "btn" %>
  <%= button_to "Delete", @portfolio, method: :delete, class: "btn" %>
</div>

<h2>Transactions</h2>
<%= display_transactions(@portfolio.transactions) %>
