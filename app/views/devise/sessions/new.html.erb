<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="login-form glass">
    <% if resource.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(resource.errors.count, "error") %> prohibited this resource from being saved:</h2>

        <ul>
          <% resource.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-section">
      <%= f.label :email, 'Email:' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-section">
      <%= f.label :password, 'Password:' %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-section">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="form-section form-btn">
      <%= f.submit "Log in", class: "btn" %>
    </div>
  </div>
<% end %>

<div class="btns">
  <%= link_to "Sign up", new_registration_path(resource_name), class: "btn" %>
  <%= link_to "Forgotten Password?", new_password_path(resource_name), class: "btn" %>
</div>
